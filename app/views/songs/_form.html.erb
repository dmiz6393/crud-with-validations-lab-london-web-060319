

<%= form_for @song do |f|%> 
    <% if @song.errors.any? %>
      <h2>There were some errors:</h2>
        <% @song.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
  <% end %>

    <%=f.label :title%>
    <%=f.text_field :title%> 
    <%= f.label :released %><br>
    <%= f.check_box :released %>
    <%= f.label :release_year%>
    <%= f.number_field :release_year%> 
    <%= f.label :genre %><br>
    <%= f.text_field :genre %>
    <%= f.label :artist_name %><br>
    <%= f.text_field :artist_name %>
    <%= f.submit %>
    <%end%> 